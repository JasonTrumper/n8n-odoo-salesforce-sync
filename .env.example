# Basic Auth for n8n dashboard
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=supersecret

# Database
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8npassword
POSTGRES_DB=n8n

# n8n encryption key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=changeme1234567890changeme123456

# Your public webhook URL (use ngrok or reverse proxy if local)
WEBHOOK_URL=https://your-domain.com/

# Salesforce OAuth
SALESFORCE_CLIENT_ID=your_client_id
SALESFORCE_CLIENT_SECRET=your_client_secret
SALESFORCE_ENV=production  # or sandbox

# Odoo API
ODOO_URL=https://your-odoo-instance.com
ODOO_API_KEY=your_odoo_api_key
ODOO_DB=your_odoo_db_name
