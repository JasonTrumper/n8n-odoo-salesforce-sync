# --------------------------------------
# PostgreSQL Database Configuration
# --------------------------------------
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n
POSTGRES_DB=n8n

# --------------------------------------
# n8n Configuration
# --------------------------------------
N8N_API_URL=http://localhost:5678
N8N_PORT=5678
N8N_URL=http://localhost:5678/rest
N8N_API_KEY=YOUR_N8N_API_KEY_HERE
# Generate a 32-byte key: `openssl rand -hex 32`
N8N_ENCRYPTION_KEY=changeme1234567890changeme123456
# Public webhook URL (needed for webhooks & OAuth callbacks)
WEBHOOK_URL=https://your-domain.com/
BACKUP_INTERVAL=86400 # 24 hours in seconds

# --------------------------------------
# Salesforce OAuth2
# --------------------------------------
SALESFORCE_CLIENT_ID=your_client_id
SALESFORCE_CLIENT_SECRET=your_client_secret
SALESFORCE_ENV=production  # production / sandbox
SF_SANDBOX_URL=https://test.salesforce.com
SF_CALLBACK_URL=http://localhost:5678/oauth2-credential/callback

# --------------------------------------
# Odoo API
# --------------------------------------
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_odoo_db_name
ODOO_API_KEY=your_odoo_api_key