[
  {
    "name": "Salesforce OAuth2",
    "type": "salesforceApi",
    "data": {
      "environment": "{{ $env.SALESFORCE_ENV }}",
      "oauth2": {
        "clientId": "{{ $env.SALESFORCE_CLIENT_ID }}",
        "clientSecret": "{{ $env.SALESFORCE_CLIENT_SECRET }}"
      }
    }
  },
  {
    "name": "Odoo API",
    "type": "httpBasicAuth",
    "data": {
      "user": "apikey",
      "password": "{{ $env.ODOO_API_KEY }}"
    }
  }
]